map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 80;
    listen [::]:80;
    server_name test.fuzzy-net.it;

    location /.well-known/acme-challenge/ {
        root /var/www/map;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}
 
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name test.fuzzy-net.it;
    server_tokens off;
    root /map;

    ssl_certificate /etc/nginx/certs/SRV_map.external.space-CHAIN.CERT.pem;
    ssl_certificate_key /etc/nginx/certs/SRV_map.external.space.KEY.pem;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;
 
    index index.php;
 
    charset utf-8;
 
    location /index.php {
        try_files /not_exists @octane;
    }
 
    location / {
        try_files $uri $uri/ @octane;
    }
 
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }
 
    access_log off;
    error_log  /var/log/nginx/map-error.log error;
 
    error_page 404 /index.php;
 
    location @octane {
        resolver 127.0.0.11 valid=300s;

        set $suffix "";
 
        if ($uri = /index.php) {
            set $suffix ?$query_string;
        }

        #proxy_bind $server_addr;
 
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header SERVER_PORT $server_port;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
 
        proxy_pass http://map.docker.space:8881$suffix;
    }
}
